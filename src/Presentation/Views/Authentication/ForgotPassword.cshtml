@model Presentation.ViewModels.Authentication.ForgotPasswordViewModel;

@{
    ViewData["Title"] = "Esqueci a Senha";
    Layout = "_LoginLayout";
}

<section class="bg-gray-50">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
        <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900">
            @* <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo"> *@
            Minha Marmita
        </a>
        <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
            <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                <h1 class="text-center text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
                    Esqueci minha senha
                </h1>
                <form asp-controller="Authentication" asp-action="ForgotPassword" asp-antiforgery="true"
                    class="space-y-4 md:space-y-6">
                    <div>
                        <label for="email" class="block mb-2 text-sm font-medium text-gray-900">
                            E-mail
                        </label>
                        <input type="email" name="email" id="email" asp-name="Email"
                            class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
                            placeholder="insira seu e-mail para recuperação" required>
                    </div>

                    <div>
                        <partial name="../Shared/Partials/_Messages.cshtml" />
                    </div>

                    <button type="submit"
                        class="w-full text-white bg-green-600 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        Enviar
                    </button>

                    <div>
                        <a asp-action="Login" class="flex text-sm justify-center text-center">
                            Voltar para login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>