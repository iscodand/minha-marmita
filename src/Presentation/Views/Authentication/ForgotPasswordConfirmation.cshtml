@model Presentation.ViewModels.Authentication.ForgotPasswordViewModel;

@{
    ViewData["Title"] = "Esqueci minha senha";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/login/login.css" asp-append-version="true" />

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>

                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="ForgotPassword" asp-antiforgery="true">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0 card-title">
                                            Esqueceu sua senha?
                                        </span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                        Um e-mail com o passo-a-passo sobre como recuperar sua conta
                                        foi enviado para vocÃª. Verifique sua caixa de e-mail.
                                    </h5>

                                    <partial name="../Shared/Partials/_Messages.cshtml" />

                                    <div class="pt-1 mb-4">
                                        <a class="btn btn-primary-custom" type="submit" asp-controller="Authentication"
                                            asp-action="Login">
                                            Confirmar
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>