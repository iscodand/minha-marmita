@model Presentation.ViewModels.User.DetailUserViewModel;

@{
    ViewData["Title"] = "Funcionário - ";
    Layout = "_Layout";
}

@await Component.InvokeAsync("Menu")

<section class="container">

    <div class="custom-card">
        <h3>Perfil do Funcionário - <b>@Model.Name</b></h3>
    </div>

    <div class="">
        <h3>Dados Pessoais</h3>
        <p>Nome: <b>@Model.Name</b></p>
        <p>Nome de Usuário: <b>@Model.Username</b></p>
        <p>Email: <b>@Model.Email</b></p>
    </div>

</section>