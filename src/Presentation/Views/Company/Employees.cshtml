@model List<Presentation.ViewModels.User.GetUserViewModel>;

@{
    ViewData["Title"] = "Funcionários";
    Layout = "_Layout";
}

@await Component.InvokeAsync("Menu")


<section class="container">

    <div class="page-title">
        <h1>Funcionários Cadastrados</h1>
    </div>

    <hr>

    <div class="row mb-4 mt-4">

        <div class="col-md-4" style="padding-top: 20px">
            <a class="btn btn-primary-custom btn-lg" asp-controller="Order" asp-action="Create">
                + Novo Funcionário
            </a>
        </div>

        <div class="col-md-8 row justify-content-end">
            <div class="col-md-4">
                <label for="search-employee-filter" class="form-label fw-thin">
                    <i class="fa-solid fa-magnifying-glass fa-sm" style="padding-right: 5px;"></i>
                    BUSCAR:
                </label>
                <input id="search-employee-filter" class="form-control" placeholder="Busque pelo nome" />
            </div>
        </div>
    </div>


    <table class="table styled-table">
        <caption>Total de funcionário encontrados: <b>@Model.Count</b></caption>
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Nome de Usuário</th>
            </tr>
        </thead>
        <tbody id="employees-tableBody">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Username</td>
                </tr>
            }
        </tbody>
    </table>

</section>
