@model Presentation.ViewModels.User.RegisterUserViewModel;

@{
    ViewData["Title"] = "Cadastrar Funcion치rio";
    Layout = "_Layout";
}

@await Component.InvokeAsync("Menu")

<section class="container">

    <form asp-action="RegisterEmployee" asp-antiforgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h5 class="fw-normal" style="letter-spacing: 1px;">Adicione um novo Funcion치rio</h5>
        <hr>
        <br>

        <div class="form-outline mb-4">
            <label class="form-label fw-bolder">Nome Completo</label>
            <input class="form-control form-control-lg" asp-for="Name" />
            <span class="text-danger fw-bolder sm" asp-validation-for="Name"></span>
        </div>

        <div class="form-outline mb-4">
            <label class="form-label fw-bolder">E-mail</label>
            <input class="form-control form-control-lg" asp-for="Email" />
            <span class="text-danger fw-bolder sm" asp-validation-for="Email"></span>
        </div>

        <div class="form-outline mb-4">
            <label class="form-label fw-bolder">Nome de Usu치rio</label>
            <input class="form-control form-control-lg" asp-for="Username" />
            <span class="text-danger fw-bolder sm" asp-validation-for="Username"></span>
        </div>

        <div class="form-outline mb-4 row">
            <div class="col-md-10">
                <label class="form-label fw-bolder">Cargo do Usu치rio</label>
                @Html.DropDownListFor(model => model.RoleId, new
                         SelectList(Model.RolesDropdown, "Name",
                         "Description")
                         , new { @class = "form-control form-control-lg" })
            </div>
        </div>

        <div class="form-outline mb-4">
            <label class="form-label fw-bolder">Senha</label>
            <input class="form-control form-control-lg" asp-for="Password" />
            <span class="text-danger fw-bolder sm" asp-validation-for="Password"></span>
        </div>

        <div class="form-outline mb-4">
            <label class="form-label fw-bolder">Confirmar Senha</label>
            <input class="form-control form-control-lg" asp-for="ConfirmPassword" />
            <span class="text-danger fw-bolder sm" asp-validation-for="ConfirmPassword"></span>
        </div>

        <partial name="../Shared/Partials/_Messages.cshtml" />

        <div class="pt-1 mb-4">
            <button class="btn btn-success btn-block" type="submit">Salvar</button>
        </div>
    </form>

    <a asp-controller="Customer" asp-action="Customers" class="btn btn-warning btn-block">Voltar</a>

</section>