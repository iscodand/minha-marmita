@model List<Presentation.ViewModels.Customer.GetCustomerViewModel>;

@{
    ViewData["Title"] = "Clientes";
    Layout = "_Layout";
}

@await Component.InvokeAsync("Menu")

<section class="container">

    <div class="row justify-content-end">
        <div>
            <a class="btn btn-primary-custom mb-3 btn-lg" asp-controller="Customer" asp-action="Create">+ Novo
                Cliente</a>
        </div>

        <div class="col-md-4" style="padding-left: 175px">
            <label for="isActive-filter" class="form-label fw-thin">ATIVO:</label>
            <select id="isActive-filter" name="isActive-filter" class="form-select form-select-lg form-control"
                style="width: 250px;">
                <option value="all">Todos</option>
                <option value="actives">Ativos</option>
                <option value="inactives">Inativos</option>
            </select>
        </div>
    </div>

    <table class="table styled-table">
        <caption>Total de clientes encontrados: <b>@Model.Count</b></caption>
        <thead>
            <tr>
                <th>#</th>
                <th>Nome do Cliente</th>
                <th>Telefone do Cliente</th>
                <th>Ativo</th>
            </tr>
        </thead>
        <tbody id="customers-tableBody">
            @foreach (var customer in Model.ToList().OrderBy(x => x.IsActive == false))
            {
                <tr>
                    <td>
                        <a type="button" class="btn btn-sm btn-success" asp-controller="Customer" asp-action="Details"
                            asp-route-customerId="@customer.Id">Detalhes</a>
                    </td>
                    <td>@customer.Name</td>

                    @if (customer.Phone == null)
                    {
                        <td style="color: red">NÃ£o adicionado</td>
                    }
                    else
                    {
                        <td>@customer.Phone</td>
                    }

                    @if (customer.IsActive)
                    {
                        <td><i id="isActive-icon" class="fa-solid fa-square-check fa-xl" style="color: #2ead3d;"></i></td>
                    }
                    else
                    {
                        <td><i class="fa-solid fa-rectangle-xmark fa-xl" style="color: #d02525;"></i></td>
                    }
                </tr>
            }
        </tbody>
    </table>

</section>

<script>
    $(document).ready(function () {
        // Bind an input event listener to the is active filter input
        $("#isActive-filter").on("change", function () {
            const isActiveFilter = $("#isActive-filter").val();

            // Loop through each row in the table body
            $("#customers-tableBody tr").each(function () {
                const isActiveColumn = $(this).find("td:nth-child(4)");

                // Check if the isActive status matches the selected filter
                const isActive = isActiveColumn.find("#isActive-icon").length > 0;

                // Determine whether to show or hide the row based on the isActive status filter
                if ((isActiveFilter === "all") ||
                    (isActiveFilter === "actives" && isActive) ||
                    (isActiveFilter === "inactives" && !isActive)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
</script>