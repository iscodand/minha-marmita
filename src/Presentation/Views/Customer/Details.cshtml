@model Presentation.ViewModels.Customer.DetailCustomerViewModel;

@{
    ViewData["Title"] = "Novo Cliente";
    Layout = "_Layout";
}

@await Component.InvokeAsync("Menu")

<link rel="stylesheet" href="~/css/details/details.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/elements/box-orders.css" asp-append-version="true" />

<script type="module" src="~/js/customers/customersActionsImport.js"></script>
<script src="~/js/utils/pagination.js"></script>

<section class="container">

    <div class="details-page-title">
        <h2>Perfil do Cliente - <b>@Model.Name</b></h2>
    </div>

    <div class="main-details">
        <h3>Dados do Cliente</h3>
        <div class="main-details-content">
            <p><span class="vertical-bar">|</span> Nome: <b>@Model.Name</b></p>

            @if (Model.Phone != null)
            {
                <p><span class="vertical-bar">|</span> Contato: <b>@Model.Phone</b></p>
            }
            else
            {
                <p><span class="vertical-bar">|</span> Contato: <b style="color: red;">Não informado.</b></p>
            }
            <p><span class="vertical-bar">|</span> Total de Pedidos: <b>@Model.Orders.Count</b></p>
            <p><span class="vertical-bar">|</span> Adicionado por: <b>@Model.CreatedBy</b></p>
        </div>
    </div>

    <!-- Display all customer orders (if has orders) -->

    <div class="orders-details">

        <div class="details-title">
            <h3>Pedidos Realizados</h3>
            <span class="last-month-data">Dados do Último Mês</span>
        </div>

        <div class="box-orders-section row">

            <div class="col-md-2">
                <div class="box-orders">
                    <i class="fa-solid fa-chevron-up fa-lg"></i>
                    <h2 id="new-orders-count">@Model.Orders.Count</h2>
                    <p>Pedidos Realizados</p>
                </div>
            </div>

            <div class="col-md-2">
                <div class="box-orders">
                    <i class="fa-solid fa-chevron-up fa-lg"></i>
                    <h2 id="new-orders-count">
                        R$ @Math.Round(Model.Orders.Where(x => x.IsPaid == true).Sum(x => x.Price), 2)
                    </h2>
                    <p>Total de Lucro</p>
                </div>
            </div>
        </div>

        @if (Model.Orders.Count > 0)
        {
            <div class="mt-4">
                <table id="orders-table" class="styled-table table">
                    <thead>
                        <tr class="table-head-row">
                            <th>Data do Pedido</th>
                            <th>Sabor</th>
                            <th>Valor</th>
                            <th>Forma de Pagamento</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="orders-tableBody" class="table-group-divider">
                        @foreach (var order in Model.Orders)
                        {
                            <tr class="table-row">
                                <td id="createdAt-order">@order.CreatedAt.Date.ToString("dd/MM/yyyy")</td>
                                <td>@order.Meal</td>
                                <td id="order-price"><b>R$</b> @Math.Round(@order.Price, 2)</td>
                                <td>
                                    @if (@order.PaymentType.Equals("PIX"))
                                    {
                                        <i class="fa-brands fa-pix fa-xl"></i>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-money-bill-wave fa-xl"></i>
                                    }
                                </td>
                                <td>
                                    @if (order.IsPaid)
                                    {
                                        <p class="status paid">Pago</p>
                                    }
                                    else
                                    {
                                        <p class="status pending">Pendente</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="pagination justify-content-center">
                    <button id="previousPage" class="btn btn-primary-custom btn-sm previous-page">
                        <i class="fa-solid fa-chevron-left" style="color: #ffffff;"></i>
                    </button>

                    <div class="current-and-total-pages">
                        <span id="currentPage" class="current-page-filter">Página 1 </span>
                        <span id="totalPages" class="total-page-filter"> de 1</span>
                    </div>

                    <button id="nextPage" class="btn btn-primary-custom btn-sm ">
                        <i class="fa-solid fa-chevron-right" style="color: #ffffff;"></i>
                    </button>
                </div>
            </div>
        }

    </div>

    <div class="custom-card">
        <a class="btn btn-primary" asp-action="Update" asp-controller="Customer" asp-route-customerId="@Model.Id">
            <i class="fa-solid fa-pen" style="color: #ffffff; padding-right: 4px;"></i> <b>Editar Cliente</b>
        </a>

        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            @if (Model.IsActive)
            {
                <button id="inactivate-customer-button" class="btn btn-warning" data-customer-id="@Model.Id">
                    <i class="fa-solid fa-ban" style="color: #ffffff; padding-right: 4px;"></i> <b>Desativar Cliente</b>
                </button>
            }
            else
            {
                <button id="activate-customer-button" class="btn btn-success" data-customer-id="@Model.Id">
                    <i class="fa-solid fa-check" style="color: #ffffff; padding-right: 4px;"></i> <b>Ativar Cliente</b>
                </button>
            }
        }

        @if (Model.Orders.Count == 0)
        {
            <button id="delete-customer-button" class="btn btn-danger" data-customer-id="@Model.Id">
                <i class="fa-solid fa-trash" style="color: #ffffff; padding-right: 4px;"></i> <b>Deletar Cliente</b>
            </button>
        }

    </div>
</section>