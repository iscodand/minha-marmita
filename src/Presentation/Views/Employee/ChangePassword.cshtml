@model Application.DTOs.Authentication.ChangePasswordDto;

@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "_Layout";
}

@await Component.InvokeAsync("Menu")

<link rel="stylesheet" href="~/css/details/details.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/create/create.css" asp-append-version="true" />
<script type="module" src="~/js/employees/employeesActionsImport.js"></script>

<section class="container-fluid" style="margin-top: -1.9rem; margin-bottom: -2rem; padding: 4rem;">

    <section class="create-form container">

        <div class="custom-card create-page-title">
            <h4>Alterar senha do usuário - @Model.Username</h4>
        </div>

        <form asp-controller="Employee" asp-action="ChangePassword" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <section class="custom-card">
                <div class="col-md-6 form-outline mb-4">
                    <label class="form-label fw-bolder">Senha antiga</label>
                    <input class="form-control form-control-lg" asp-for="OldPassword" />
                    <span class="custom-alert" asp-validation-for="OldPassword"></span>
                </div>

                <div>
                    <div class="col-md-6 form-outline mb-4">
                        <label class="form-label fw-bolder">Nova senha</label>
                        <input type="text" class="form-control form-control-lg" asp-for="NewPassword" />
                        <span class="text-danger fw-bolder sm" asp-validation-for="NewPassword"></span>
                    </div>

                    <div class="col-md-6 form-outline mb-4">
                        <label class="form-label fw-bolder">Confirme sua nova senha</label>
                        <input type="text" class="form-control form-control-lg" asp-for="ConfirmNewPassword" /> 
                        <span class="text-danger fw-bolder sm" asp-validation-for="ConfirmNewPassword"></span>
                    </div>
                </div>

                <partial name="../Shared/Partials/_Messages.cshtml" />

                <div class="pt-1">
                    <button class="btn btn-primary-custom" type="submit" style="margin-right: 20px;">
                        <i class="fa-solid fa-check fa-lg" style="color: #ffffff; padding-right: 4px;"></i> Confirmar
                    </button>
                </div>
            </section>

            <div class="pt-1">
                <a asp-controller="Employee" asp-action="DetailEmployee" asp-route-employeeUsername="@Model.Username" class="btn btn-warning pt-1">
                    <i class="fa-solid fa-arrow-left fa-lg" style="color: #ffffff; padding-right: 4px;"></i>
                    <b>Voltar</b>
                </a>
            </div>

        </form>

    </section>

</section>