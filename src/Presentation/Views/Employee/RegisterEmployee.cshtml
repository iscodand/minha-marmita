@model Presentation.ViewModels.User.RegisterUserViewModel;

@{
    ViewData["Title"] = "Cadastrar Funcionário";
    Layout = "_Layout";
}

<section>
    <div class="mb-8 flex">
        <a asp-controller="Meal" asp-action="Meals"
            class="flex gap-2 shadow bg-blue-700 hover:bg-blue-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">

            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="fill-white mt-1">
                <path
                    d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z" />
            </svg>

            Voltar
        </a>
    </div>

    <h1 class="text-3xl font-bold mb-6">Cadastrar Funcionário</h1>

    <div class="p-8 mt-6 lg:mt-0 rounded shadow bg-white">

        <form asp-action="RegisterEmployee" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
                        Nome do Funcionário
                    </label>
                </div>
                <div class="md:w-2/3">
                    <div class="flex">
                        <input asp-for="Name" type="text" placeholder="Insira o nome do funcionário"
                            class="rounded bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5">
                    </div>
                </div>
            </div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
                        E-mail do Funcionário
                    </label>
                </div>
                <div class="md:w-2/3">
                    <div class="flex">
                        <input asp-for="Email" type="email" placeholder="Insira o e-mail do funcionário."
                            class="rounded bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5">
                    </div>
                </div>
            </div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
                        Nome de Usuário
                    </label>
                </div>
                <div class="md:w-2/3">
                    <div class="flex">
                        <input asp-for="Username" type="text" placeholder="Insira o nome de usuário"
                            class="rounded bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5">
                    </div>
                </div>
            </div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-select">
                        Cargo do Funcionário
                    </label>
                </div>
                <div class="md:w-2/3">
                    @Html.DropDownListFor(model => model.RoleId, new
                         SelectList(Model.RolesDropdown, "Name",
                         "Description")
                    , new { @class = "shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" })
                    @* <p class="py-2 text-sm text-gray-600">add notes about populating the field</p> *@
                </div>
            </div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
                        Senha
                    </label>
                </div>
                <div class="md:w-2/3">
                    <div class="flex">
                        <input asp-for="Password" type="password" placeholder="Insira a senha"
                            class="rounded bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5">
                    </div>
                </div>
            </div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
                        Confirmar Senha
                    </label>
                </div>
                <div class="md:w-2/3">
                    <div class="flex">
                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirme sua senha"
                            class="rounded bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5">
                    </div>
                </div>
            </div>

            <div class="md:flex md:items-center">
                <div class="md:w-1/3"></div>
                <div class="md:w-2/3">
                    <button
                        class="shadow bg-green-700 hover:bg-green-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                        type="submit">
                        Salvar Funcionário
                    </button>
                </div>
            </div>

            <partial name="../Shared/Partials/_Messages.cshtml" />
        </form>
</section>