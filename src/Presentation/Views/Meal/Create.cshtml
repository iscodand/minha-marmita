@model Application.Dtos.Meal.CreateMealDto;

@{
    ViewData["Title"] = "Novo Sabor";
    Layout = "_Layout";
}


<section>
    <h1 class="text-3xl font-bold mb-6">Cadastrar novo Sabor</h1>

    <div class="p-8 mt-6 lg:mt-0 rounded shadow bg-white">
        <form asp-controller="Meal" asp-action="Create" class="max-w">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="my-textfield">
                        Nome do Sabor
                    </label>
                </div>
                <div class="md:w-2/3">
                    <div class="flex">
                        <input asp-for="Description" type="text" placeholder="Insira o nome do sabor"
                            class="rounded bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5">
                    </div>
                </div>
            </div>

            <div class="md:flex mb-6">
                <div class="md:w-1/3">
                    <label class="block text-gray-600 font-bold md:text-left mb-3 md:mb-0 pr-4" for="description">
                        Acompanhamentos (opcional)
                    </label>
                </div>
                <div class="md:w-2/3">
                    <textarea asp-for="Accompaniments"
                        class="rounded bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5"
                        id="description" value="" rows="8"
                        placeholder="Adicione os acompanhamentos do sabor (opcional)"></textarea>
                </div>
            </div>

            <div class="md:flex md:items-center">
                <div class="md:w-1/3"></div>
                <div class="md:w-2/3">
                    <button
                        class="shadow bg-yellow-700 hover:bg-yellow-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                        type="submit">
                        Salvar Sabor
                    </button>
                </div>
            </div>
        </form>
    </div>

</section>