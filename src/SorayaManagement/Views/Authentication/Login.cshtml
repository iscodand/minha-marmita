@model SorayaManagement.Infrastructure.Identity.Dtos.LoginUserDto;

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<section class="vh-100" style="background-color: #EDEDED;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>

                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Login" asp-antiforgery="true">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0">Soraya Management</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Realize o Login com sua
                                        conta
                                    </h5>

                                    <div class="form-outline mb-4">
                                        <label class="form-label fw-bolder">Nome de Usuário</label>
                                        <input class="form-control form-control-lg" asp-for="UserName" />
                                        <span class="text-danger fw-bolder sm" asp-validation-for="UserName"></span>
                                    </div>

                                    <div class="form-outline">
                                        <label class="form-label fw-bolder">Senha</label>
                                        <input class="form-control form-control-lg" asp-for="Password"
                                            type="password" />
                                        <span class="text-danger fw-bolder sm" asp-validation-for="Password"></span>
                                    </div>

                                    <div class="mb-4">
                                        <a class="small text-muted" href="#">Esqueceu sua senha?</a>
                                    </div>

                                    <partial name="../Shared/Partials/_Messages.cshtml" />

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                    </div>

                                </form>

                                <div>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">Não possui uma conta?<a href="#!"
                                            style="color: #393f81;"> Cadastre-se aqui</a></p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>