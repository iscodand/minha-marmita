@model List<SorayaManagement.ViewModels.GetCustomerViewModel>;

@{
    ViewData["Title"] = "Clientes";
    Layout = "_Layout";
}

@await Component.InvokeAsync("Menu")

<section class="container">

    <a class="btn btn-primary-custom mb-3" asp-controller="Customer" asp-action="Create">Novo Cliente</a>

    <table class="table styled-table">
        <caption>Total de clientes encontrados: <b>@Model.Count</b></caption>
        <thead class="table-head-row">
            <tr>
                <th>#</th>
                <th>Nome do Cliente</th>
                <th>Adicionado por</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.ToList())
            {
                <tr class="table-row">
                    <th>@customer.Id</th>
                    <td>@customer.Name</td>
                    <td>@customer.CreatedBy</td>
                    <td>
                        <a type="button" class="btn btn-sm btn-success" asp-controller="Customer" asp-action="Details"
                            asp-route-customerId="@customer.Id">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>