@model SorayaManagement.ViewModels.GetUserDataViewModel;

<nav class="navbar navbar-expand-lg mb-5">
    <div class="container-fluid">

        <button class="border-0 bg-transparent navbar-brand me-2" style="margin-top: -1px;">
            @Model.CompanyName
        </button>

        <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarButtonsExample"
            aria-controls="navbarButtonsExample" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarButtonsExample">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Order" asp-action="Orders">Pedidos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Meal" asp-action="Meals">Sabores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customer" asp-action="Customers">Clientes</a>
                </li>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Company" asp-action="MyCompany">Minha Empresa</a>
                    </li>
                }
            </ul>

            <div class="d-flex align-items-center">
                <i class="fa-solid fa-user"></i>
                <button id="authenticated-user-name" class="px-3 me-2 border-0 bg-transparent">
                    <b>@Model.Name</b>
                </button>
                <form asp-controller="Authentication" asp-action="Logout">
                    <button class="btn btn-danger btn-sm me-3" type="submit">
                        Sair
                    </button>
                </form>
            </div>

        </div>
    </div>
</nav>